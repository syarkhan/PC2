                android:id="@+id/imageView4"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                app:layout_constraintLeft_toRightOf="@+id/txtName"
                app:layout_constraintTop_toTopOf="@+id/txtName"
                app:srcCompat="@mipmap/user2"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="8dp" />


            <TextView
                android:id="@+id/txtLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Likes"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toLeftOf="@+id/txtComments" />

            <TextView
                android:id="@+id/txtComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="0 Comments"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtLikes"
                app:layout_constraintLeft_toRightOf="@+id/txtLikes"
                app:layout_constraintRight_toLeftOf="@+id/guideline4" />

            <TextView
                android:id="@+id/txtSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/txtLocation"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/txtLocation" />

