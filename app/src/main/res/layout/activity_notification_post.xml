            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="News Post"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>


    <ProgressBar
